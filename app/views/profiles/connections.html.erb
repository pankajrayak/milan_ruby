<div class="container">
<h2>Connections</h2>
<% if @connections.exists?%>
<% @connections.each do |connection| %>
	<div class="row" style="
    background: aliceblue;
    border-radius: 20px;
    margin-top: 20px!important;
">
    <div class=" col-md-4 col-lg-6" align="center">
         <img alt="User Pic" src="/uploads/photo/photo/16/Smith.jpg" class="img-circle img-responsive"> 
        </div>
		<div class=" col-md-8 col-lg-6">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8 verticalLine">
                    <h2><%=connection.user.first_name%> <%=connection.user.last_name%></h2>
                    <hr>                   
<p><strong>Height: </strong> <%=connection.user.profile.height%> </p>
<p><strong>Religion : </strong> <%=connection.user.profile.religion%> </p>
<p><strong>Education: </strong> <%=connection.user.profile.education_level%> </p>
<p><strong>Job Status: </strong><%=connection.user.profile.job_status%> </p>
<p><strong>Areas of Interest: </strong> <%=connection.user.profile.interest%></p>
<br>
                <div class="">
                <a href="http://<%=connection.user.profile.facebook%>" target="_blank"><i class="fa fa-facebook fa-fa-icon-size" aria-hidden="true"></i> &nbsp &nbsp </a>
                <a href="http://<%=connection.user.profile.instagram%>" target="_blank"><i class="fa fa-instagram fa-fa-icon-size" aria-hidden="true"></i>&nbsp &nbsp  </a>
                <a href="http://<%=connection.user.profile.instagram%>" target="_blank"><i class="fa fa-linkedin fa-fa-icon-size" aria-hidden="true"></i> &nbsp&nbsp </a>
                </div>    

                </div>             
                <div class="col-xs-12 col-sm-4 text-center ancor-white">
                    <div class="row emphasis">
                                        
                     
                    <%= link_to "View Profile", connectionprofile_path(:id => connection.user.profile.id), class: "btn btn-info btn-block"%>
                </div>
                <div class="row emphasis">
                    <h2></h2>                    
                    <p></p>
                   <%= link_to "Send Message", conversations_path, class: "btn btn-info btn-block"%>
                </div>
                <div class="row emphasis">
                                        
                    
                    
                </div>
                </div>
            </div>            
            <div class="col-xs-12  text-center">
                
            </div>
    	 </div>                 
		</div>
        <p><strong>About Me: </strong> <%=connection.user.profile.about_me%> </p>
	</div>
    <%end%>
<%else%>
    <h2>No connections</h2>
<%end%>
    
</div>

