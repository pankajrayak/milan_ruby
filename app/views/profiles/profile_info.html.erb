
<%= render 'profiles/dashboard_header', :profile => @profile,:user_height =>@user_height,:current_user=> current_user %>

<div class="profile">
    <div class="row">
        <div class="col-md-3">
             <%= render 'profiles/profile_photos', :profile => @profile,:user_height =>@user_height,:current_user=> current_user%>
        </div>
        <div class="col-md-6">
            <%= render 'profiles/profile_info', :profile => @profile,:user_height =>@user_height,:current_user=> current_user %>
        </div>
        <div class="col-md-3">
            <%= render 'profiles/profile_action', :profile => @profile,:user_height =>@user_height,:current_user=> current_user %>
        </div>
    </div>
    <br>
    <div class="row">
      <h2>About Me</h2>
      <p><%=@profile.about_me%></p>
    </div>
    </div>
</div>

<%= render 'admin/reason_modal' %>

<script>
    $(document).ready(function () {
        var panels = $('.user-infos');
        var panelsButton = $('.dropdown-user');
        panels.hide();

        //Click dropdown
        panelsButton.click(function () {
            //get data-for attribute
            var dataFor = $(this).attr('data-for');
            var idFor = $(dataFor);

            //current button
            var currentButton = $(this);
            idFor.slideToggle(400, function () {
                //Completed slidetoggle
                if (idFor.is(':visible')) {
                    currentButton.html(
                        '<i class="glyphicon glyphicon-chevron-up text-muted"></i>');
                } else {
                    currentButton.html(
                        '<i class="glyphicon glyphicon-chevron-down text-muted"></i>');
                }
            })
        });


        $('[data-toggle="tooltip"]').tooltip();

        $('button').click(function (e) {
            e.preventDefault();

        });
    });
</script>
<style>
    .margin-top {
        margin-top: 5px;
    }
</style>